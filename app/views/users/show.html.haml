.col-md-8.col-md-offset-2.mt30
  .panel.panel-default
    .panel-body
      .row
        .col-xs-12.col-sm-4.text-center
          %img.center-block.img-circle.img-responsive{:alt => @user.name, :src => @user.image}/
        .col-xs-12.col-sm-8
          %h2= @user.name
          %p
            %strong About:
            = @user.headline
          %p
            %strong Hobbies:
            - @user.interest_list.each do |interest|
              %span.label.label-info.tags= interest
          %p
            %strong Skills:
            - @user.skill_list.each do |skill|
              %span.label.label-info.tags= skill
        / /col
        .clearfix
        .col-xs-12.col-sm-4
          %h2
            %strong 20,7K
          %p
            %small Followers
          %button.btn.btn-success.btn-block
            %span.fa.fa-plus-circle
            Follow
        / /col
        .col-xs-12.col-sm-4
          %h2
            %strong 245
          %p
            %small Following
          %button.btn.btn-info.btn-block
            %span.fa.fa-user
            View Profile
        / /col
        .col-xs-12.col-sm-4
          %h2
            %strong 43
          %p
            %small Snippets
          %button.btn.btn-primary.btn-block{:type => "button"}
            %span.fa.fa-gear
            Options
        / /col
      / /row
    / /panel-body
